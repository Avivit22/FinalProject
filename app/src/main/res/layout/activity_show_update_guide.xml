<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- תמונת רקע -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background1"
        android:scaleType="centerCrop"
        android:alpha="0.2" />

    <!-- קובץ עליון עם לוגו -->
    <LinearLayout
        android:id="@+id/topBarLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:src="@drawable/logo"
            android:layout_marginStart="10dp"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- טקסט כותרת -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="צפייה ועדכון פרטי מדריך"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- שורת חיפוש מדריך -->
    <LinearLayout
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <AutoCompleteTextView
            android:id="@+id/searchGuideAutoComplete"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="חיפוש שם מדריך"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textColorHint="#A9A9A9"
        android:padding="12dp"
        android:drawableStart="@drawable/search_icon"
        android:completionThreshold="1" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/detailsScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchLayout"
        android:layout_marginTop="15dp"
        android:visibility="gone">  <!-- התחל מוסתר -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- קונטיינר להצגת תמונה וכפתור באותה שורה -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|end"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/uploadImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="שנה תמונה"
                    android:backgroundTint="#7387CEEB"
                    android:textColor="#000000"
                    android:layout_marginStart="16dp"/>

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@null"
                    android:scaleType="centerCrop"
                    android:padding="5dp"
                    android:background="#E0E0E0" />
            </LinearLayout>

            <!-- שם מלא -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="end" android:layout_marginBottom="15dp">
                <EditText android:id="@+id/fullNameEditText" android:layout_width="wrap_content" android:minWidth="150dp" android:layout_height="wrap_content" android:text="" android:textSize="18sp" android:gravity="end|center_vertical" android:textDirection="rtl" android:textAlignment="viewEnd"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="שם מלא: " android:textSize="18sp" android:textStyle="bold" />
            </LinearLayout>

            <!-- מספר פעיל -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="end" android:layout_marginBottom="15dp">
                <EditText android:id="@+id/activeNumberEditText" android:layout_width="wrap_content" android:minWidth="150dp" android:layout_height="wrap_content" android:text="" android:textSize="18sp" android:inputType="number" android:gravity="end"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="מספר פעיל: " android:textSize="18sp" android:textStyle="bold" />
            </LinearLayout>

            <!-- שדה מייל (נוסף עבור מדריך) -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="end" android:layout_marginBottom="15dp">
                <EditText android:id="@+id/emailEditText" android:layout_width="wrap_content" android:minWidth="150dp" android:layout_height="wrap_content" android:text="" android:textSize="18sp" android:inputType="textEmailAddress" android:gravity="end"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="מייל: " android:textSize="18sp" android:textStyle="bold" />
            </LinearLayout>

            <!-- מגדר -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginBottom="15dp">
                <Spinner android:id="@+id/genderSpinner" android:layout_width="wrap_content" android:layout_height="wrap_content" android:entries="@array/gender_options" android:spinnerMode="dropdown" android:gravity="end|center_vertical" android:textDirection="rtl" android:textAlignment="viewEnd"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="מגדר: " android:textSize="18sp" android:textStyle="bold" />
            </LinearLayout>

            <!-- תאריך לידה -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginBottom="15dp">
                <EditText android:id="@+id/birthDateEditText" android:layout_width="wrap_content" android:minWidth="150dp" android:layout_height="wrap_content" android:hint="בחר תאריך" android:textSize="18sp" android:focusable="false" android:clickable="true" android:gravity="end"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="תאריך לידה: " android:textSize="18sp" android:textStyle="bold" />
            </LinearLayout>

            <!-- יום בשבוע בו מדריך -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginBottom="15dp">
                <Spinner android:id="@+id/dayOfWeekSpinner" android:layout_width="wrap_content" android:layout_height="wrap_content" android:entries="@array/days_of_week" android:spinnerMode="dropdown" android:gravity="end|center_vertical" android:textDirection="rtl" android:textAlignment="viewEnd"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="יום בשבוע בו מדריך: " android:textSize="18sp" android:textStyle="bold" />
            </LinearLayout>

            <!-- מספר טלפון נייד -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="end" android:layout_marginBottom="15dp">
                <EditText android:id="@+id/phoneEditText" android:layout_width="wrap_content" android:minWidth="150dp" android:layout_height="wrap_content" android:text="" android:textSize="18sp" android:inputType="phone" android:gravity="end"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="טלפון: " android:textSize="18sp" android:textStyle="bold" />
            </LinearLayout>

            <!-- תאריך הצטרפות -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginBottom="15dp">
                <EditText android:id="@+id/joinDateEditText" android:layout_width="wrap_content" android:minWidth="150dp" android:layout_height="wrap_content" android:hint="בחר תאריך" android:textSize="18sp" android:focusable="false" android:clickable="true" android:gravity="end"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="תאריך הצטרפות: " android:textSize="18sp" android:textStyle="bold" />
            </LinearLayout>

            <!-- כתובת -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="end" android:layout_marginBottom="15dp">
                <EditText android:id="@+id/addressEditText" android:layout_width="wrap_content" android:minWidth="150dp" android:layout_height="wrap_content" android:text="" android:textSize="18sp" android:gravity="end|center_vertical" android:textDirection="rtl" android:textAlignment="viewEnd"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="כתובת: " android:textSize="18sp" android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout android:id="@+id/parent1NameLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="end" android:layout_marginBottom="15dp">
                <EditText android:id="@+id/parent1NameEditText" android:layout_width="wrap_content" android:minWidth="150dp" android:layout_height="wrap_content" android:text="" android:textSize="18sp" android:gravity="end|center_vertical" android:textDirection="rtl" android:textAlignment="viewEnd"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="שם הורה 1: " android:textSize="18sp" android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout android:id="@+id/parent2NameLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="end" android:layout_marginBottom="15dp">
                <EditText android:id="@+id/parent2NameEditText" android:layout_width="wrap_content" android:minWidth="150dp" android:layout_height="wrap_content" android:text="" android:textSize="18sp" android:gravity="end|center_vertical" android:textDirection="rtl" android:textAlignment="viewEnd"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="שם הורה 2: " android:textSize="18sp" android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout android:id="@+id/parentPhoneLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="end" android:layout_marginBottom="15dp">
                <EditText android:id="@+id/parentPhoneEditText" android:layout_width="wrap_content" android:minWidth="150dp" android:layout_height="wrap_content" android:text="" android:textSize="18sp" android:inputType="phone" android:gravity="end" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="טלפון הורים: " android:textSize="18sp" android:textStyle="bold" />
            </LinearLayout>


            <Button
                android:id="@+id/saveChangesButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="שמור שינויים"
                android:backgroundTint="#004FAA"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">
                <Button
                    android:id="@+id/deleteGuideButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="מחיקה מהמערכת"
                android:backgroundTint="#39AA0022"
                android:textSize="14sp"
                android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>