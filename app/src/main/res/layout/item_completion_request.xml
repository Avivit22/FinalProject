<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:elevation="4dp"
    android:layout_marginBottom="10dp"
    android:padding="12dp"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    >

    <TextView android:id="@+id/tvStudentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שם חניך"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView android:id="@+id/tvGuideName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שם מדריך"
        android:textSize="16sp" />

    <TextView android:id="@+id/tvCompletionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="תאריך השלמה"
        android:textSize="16sp" />

    <TextView android:id="@+id/tvMissingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="תאריך חיסור (אם קיים)"
        android:textSize="16sp" />

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="8dp">

        <Button android:id="@+id/btnApprove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="אשר"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />

        <Space android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <Button android:id="@+id/btnReject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="דחה"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</LinearLayout>
