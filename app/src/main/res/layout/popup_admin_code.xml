<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/transparent">

    <!-- קונטיינר שמרכז את הפופ-אפ -->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/popup_background_admin"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">

        <!-- כותרת -->
        <TextView
            android:id="@+id/popupTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="הזן קוד מנהל"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingBottom="5dp"/>

        <!-- שדה קלט -->
        <EditText
            android:id="@+id/adminCodeEditText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="הכנס קוד"
            android:gravity="center"
            android:padding="5dp"
            android:background="@android:drawable/edit_text" />

        <!-- כפתור התחברות -->
        <Button
            android:id="@+id/adminLoginButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="התחבר"
            android:layout_marginTop="10dp"
            android:backgroundTint="#004FA9"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>
    </LinearLayout>

</FrameLayout>
