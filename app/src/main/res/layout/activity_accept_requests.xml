<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- תמונת רקע -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background1"
        android:scaleType="centerCrop"
        android:alpha="0.2" />

    <!-- קובץ עליון עם לוגו וכותרת -->
    <LinearLayout
        android:id="@+id/topBar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical">

        <!-- תמונה בצד שמאל -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:src="@drawable/logo"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <!-- טקסט כותרת -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="אישור בקשות לשיעור נוסף"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- רשימת בקשות -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:layoutDirection="rtl">

            <!-- בקשה 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp">

                <!-- שם מגיש הבקשה -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="שם מגיש הבקשה: "
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="יוסי כהן"
                        android:textSize="16sp"/>
                </LinearLayout>

                <!-- שם החניך -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="שם החניך: "
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="דניאל לוי"
                        android:textSize="16sp"/>
                </LinearLayout>

                <!-- הגעה בתאריך -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="הגעה בתאריך: "
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/02/2025"
                        android:textSize="16sp"/>
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="הערת מדריך: "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="right"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="החניך נדרש לסיים טיסן לפני תחרות"
                    android:textSize="16sp"
                    android:gravity="right"/>

                <!-- כפתורי אישור/דחייה -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingTop="10dp">

                    <Button
                        android:id="@+id/approveRequest1"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:text="אשר"
                        android:backgroundTint="#4CAF50"
                        android:textColor="#FFFFFF"
                        android:padding="5dp"
                        android:textSize="18dp"/>

                    <Space android:layout_width="16dp" android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/rejectRequest1"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:text="דחה"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="#F44336"
                        android:textColor="#FFFFFF"
                        android:padding="5dp"
                        android:textSize="18dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- בקשה 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">

                <!-- שם מגיש הבקשה -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="שם מגיש הבקשה: "
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="אורי לוי"
                        android:textSize="16sp"/>
                </LinearLayout>

                <!-- שם החניך -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="שם החניך: "
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="דניאל לוי"
                        android:textSize="16sp"/>
                </LinearLayout>

                <!-- הגעה בתאריך -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="הגעה בתאריך: "
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/02/2025"
                        android:textSize="16sp"/>
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="הערת מדריך: "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="right"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="החניך צריך עוד כחצי שעה כדי לסיים את הטיסן"
                    android:textSize="16sp"
                    android:gravity="right"/>

                <!-- כפתורי אישור/דחייה -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingTop="10dp">

                    <Button
                        android:id="@+id/approveRequest2"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:text="אשר"
                        android:backgroundTint="#4CAF50"
                        android:textColor="#FFFFFF"
                        android:padding="5dp"
                        android:textSize="18dp"/>

                    <Space android:layout_width="16dp" android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/rejectRequest2"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:text="דחה"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="#F44336"
                        android:textColor="#FFFFFF"
                        android:padding="5dp"
                        android:textSize="18dp"/>
                </LinearLayout>



            </LinearLayout>


        </LinearLayout>



    </ScrollView>

</RelativeLayout>
