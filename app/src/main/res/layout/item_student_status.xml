<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:elevation="4dp"
    android:padding="8dp"
    android:layout_marginBottom="12dp">

    <!-- שם חניך -->
    <TextView
        android:id="@+id/tvStudentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/studentName"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_gravity="end"
        android:layout_marginBottom="4dp" />

    <!-- תגית (שיעור השלמה) -->
    <TextView
        android:id="@+id/tvSpecialLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/compClass"
        android:textColor="#FF0000"
        android:textSize="14sp"
        android:visibility="gone"
        android:layout_gravity="end"
        android:layout_marginBottom="6dp"/>

    <!-- נוכחות + חיסור + השלמה + תורן -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layoutDirection="ltr"
        android:layout_marginBottom="6dp">

        <!-- תורן בצד שמאל -->
        <CheckBox
            android:id="@+id/cbToran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="תורן"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="0dp"
            android:layoutDirection="rtl"
            />

        <!-- רווח בין -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- רדיובטנים -->
        <RadioGroup
            android:id="@+id/rgAttendanceStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl">


            <RadioButton
                android:id="@+id/rbPresent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="נוכח" />

            <RadioButton
                android:id="@+id/rbAbsent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="חיסור" />

            <RadioButton
                android:id="@+id/rbReplacement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="השלמה" />
        </RadioGroup>
    </LinearLayout>


    <!-- שורת "פרטי חניך" + הערות -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp">

        <Button
            android:id="@+id/btnDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="פרטי חניך"
            android:backgroundTint="#B7E4F7"
            android:textColor="#000000"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/etNotes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="הערות"
            android:background="#E8E8E8"
            android:padding="8dp"
            android:gravity="right"/>
    </LinearLayout>

</LinearLayout>
